@{
  Layout = "_Layout";
}

@using UniversityRegistrar.Models;
@model List<UniversityRegistrar.Models.Student>;

<h3>Find a student:</h3>
<hr />
@Html.TextBox("SearchInput")
<p>@Html.ActionLink("Search", "Index", "Students", new { searchString = "SearchInput" })</p>


<h3>Students list:</h3>
<hr />
@if (@Model.Count == 0)
{
  <p>No student have been found.</p>
} 

@foreach (Student student in Model)
{
  <p>@Html.ActionLink($"{student.Name}", "Details", new { id = student.StudentId })</p>
}

<p>@Html.ActionLink("Home", "Index", "Home")</p>
<p>@Html.ActionLink("Add new student", "Create")</p>
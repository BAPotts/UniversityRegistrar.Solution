@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Student

<h3>Add a new student:</h3>
<hr />
@using (Html.BeginForm())
{
  <div class="form-group">
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new {@class = "form-control"})
  </div>
  <div class="form-group">
    @Html.LabelFor(model => model.EnrollmentDay)
    @Html.TextBoxFor(model => model.EnrollmentDay, new { @type = "date", @class = "form-control"})
  </div>
  <div class="form-group"> 
    @Html.Label("Select course:")
    @Html.DropDownList("CourseId")
  </div>
  <input type="submit" value="Add new student" class="btn" />
}
<p>@Html.ActionLink("Back to students list", "Index")</p>
